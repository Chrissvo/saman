{{#bread-crumbs model=model}}{{/bread-crumbs}}

{{#if customerForm}}
  {{#object-form submit="saveCustomer" header="Klantgegevens" buttonLabel="Volgende"}}
  
  	{{form-field type="text" fieldId="name" value=name label="Naam"}}
  	{{form-field type="text" fieldId="address" value=address label="Adres"}}
  	{{form-field type="text" fieldId="zip" value=zip label="Postcode"}}
  	{{form-field type="text" fieldId="city" value=city label="Woonplaats"}}
  	{{form-field type="email" fieldId="email" value=email isRequired=true label="E-mail"}}
  	{{form-field type="text" fieldId="phone" value=phone label="Telefoon"}}

  {{/object-form}}
{{/if}}