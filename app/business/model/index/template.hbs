{{#bread-crumbs model=model}}{{/bread-crumbs}}

{{#if customerForm}}
  {{#object-form submit="saveCustomer" header="Klantgegevens" buttonLabel="Volgende"}}

  	{{form-field type="text" fieldId="name" value=name label="Naam"}}
  	{{form-field type="text" fieldId="address" value=address label="Adres"}}
  	{{form-field type="text" fieldId="zip" value=zip label="Postcode"}}
  	{{form-field type="text" fieldId="city" value=city label="Woonplaats"}}
  	{{form-field type="email" fieldId="email" value=email isRequired=true label="E-mail"}}
  	{{form-field type="text" fieldId="phone" value=phone label="Telefoon"}}

  {{/object-form}}
{{/if}}

{{#if companyForm}}
  {{#object-form submit="saveCompany" header="Bedrijfsgegevens" buttonLabel="Volgende"}}

    {{form-field type="select" fieldId="companyType" selectData=companyTypes value=companyType label="Juridische bedrijfsform"}}
    {{#if (or (eq companyType 'BV') (eq companyType 'NV'))}}
      {{form-field type="select" fieldId="incomeCategory" selectData=corporateIncomeCategories value=incomeCategory label="Inkomen / Winst"}}
    {{else if (or (eq companyType 'Eenmanszaak') (eq companyType 'Maatschap') (eq companyType 'CV') (eq companyType 'VOF'))}}
      {{form-field type="select" fieldId="incomeCategory" selectData=personalIncomeCategories value=incomeCategory label="Inkomen / Winst"}}
    {{/if}}
    {{form-field type="number" fieldId="otherInvestments" value=otherInvestments label="Overige investeringen"}}
    {{form-field type="number" fieldId="energyUsage" value=energyUsage label="Huidig Verbruik in kWh/jaar"  isRequired=true}}
    {{form-field type="number" fieldId="energyPrice" value=energyPrice label="Netto energieprijs per kWh" isRequired=true}}
    {{form-field type="number" fieldId="factorOwnUsage" value=factorOwnUsage label="Factor eigen verbruik in %" isRequired=true}}
    {{form-field type="select" fieldId="connection" selectData=connectionTypes value=connection label="Aansluiting"}}

  {{/object-form}}
{{/if}}

{{#if systemForm}}

  {{#object-form submit="saveSystem" header="Zonne-energiesysteem" buttonLabel="Start berekening"}}

    {{form-field type="number" fieldId="panelAmount" value=panelAmount label="Aantal panelen" isRequired=true}}
    {{form-field type="number" fieldId="panelPower" value=panelPower label="Vermogen in Watt piek" isRequired=true}}
    {{form-field type="number" fieldId="panelPrice" value=panelPrice label="Koster per Watt piek" isRequired=true}}
    {{form-field type="select" selectData=roofOrientations fieldId="roofOrientation" value=roofOrientation label="Orientatie"}}
    {{form-field type="select" selectData=roofSlopes fieldId="roofSlope" value=roofSlope label="Hellingshoek" }}
    {{form-field type="select" selectData=sdePhases fieldId="sdePhase" value=sdePhase label="SDE Inschrijffase"}}
    {{form-field type="number" fieldId="apxPrice" value=apxPrice label="APX energieprijs" isRequired=true}}

  {{/object-form}}

{{/if}}
